pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/dotnet/sdk:9.0'
            args '-u root:root'
        }
    }

    stages {
        stage('Check workspace') {
            steps {
                sh 'pwd'
                sh 'ls -R'
            }
        }

        stage('Restore') {
            steps {
                sh 'dotnet restore RoomReservationSystem.sln'
            }
        }

        stage('Build') {
            steps {
                sh 'dotnet build RoomReservationSystem.sln --configuration Release'
            }
        }

        stage('Run') {
            steps {
                sh 'dotnet run --project RoomReservationSystem/RoomReservationSystem.csproj'
            }
        }
    }
}

